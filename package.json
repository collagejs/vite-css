{
  "name": "@collagejs/vite-css",
  "version": "0.1.0",
  "description": "Vite plug-in for automatic CSS injection in CollageJS micro-frontends",
  "keywords": [
    "micro-frontend",
    "mfe",
    "microfrontend",
    "collagejs",
    "vite",
    "vite-plugin",
    "css"
  ],
  "homepage": "https://collagejs.dev",
  "bugs": {
    "url": "https://github.com/collagejs/vite-css/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collagejs/vite-css.git"
  },
  "license": "MIT",
  "author": {
    "name": "José Pablo Ramírez Vargas",
    "email": "webJose@gmail.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./ex": {
      "types": "./dist/index-ex.d.ts"
    }
  },
  "files": [
    "dist",
    "!dist/index-ex.js*"
  ],
  "scripts": {
    "test": "ts-mocha -n loader=ts-node/esm -p ./tsconfig.json ./tests/**/*.test.ts",
    "build": "rimraf dist && tsc && publint"
  },
  "peerDependencies": {
    "@collagejs/core": "^0.1.0",
    "vite": "^7.0.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.2",
    "chai": "^6.2.1",
    "publint": "^0.3.16",
    "rimraf": "^6.1.2",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
